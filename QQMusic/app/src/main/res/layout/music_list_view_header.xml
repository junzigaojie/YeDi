<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_normal"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <CheckBox
        android:layout_marginLeft="@dimen/depart_space_height"
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_mark_count"
        android:button="@drawable/ic_all_play_24dp"
        android:checked="true"/>

     <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/check_list_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_list_open"
        android:layout_marginRight="@dimen/fab_margin"/>

</LinearLayout>
